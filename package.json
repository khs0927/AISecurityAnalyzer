{
  "name": "not-today-platform",
  "private": true,
  "packageManager": "pnpm@9.4.0",
  "workspaces": ["apps/*", "packages/*", "scripts"],
  "scripts": {
    "dev": "NODE_ENV=development nodemon --exec ts-node --esm server/index.ts",
    "build": "tsc -b server && vite build",
    "start": "NODE_ENV=production node dist/server/index.js",
    "lint": "eslint --ext .ts,.tsx .",
    "format": "prettier --write .",
    "test": "jest",
    "commit": "cz",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.0-alpha.18", 
    "turbo": "^2.3.2",
    "eslint": "^9.1.2",
    "@typescript-eslint/parser": "^7.4.1",
    "@typescript-eslint/eslint-plugin": "^7.4.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "prettier": "^3.2.5",
    "husky": "^9.0.7",
    "vitest": "^1.4.0",
    "supertest": "^7.1.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.2.1",
    "typescript": "5.6.3",
    "@types/node": "20.16.11",
    "@types/express": "4.17.21"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "encoding": "^0.1.13",
    "@prisma/client": "^5.13.0",
    "express": "^4.18.2",
    "dotenv": "^16.0.3",
    "mongoose": "^7.0.3",
    "cors": "^2.8.5",
    "socket.io": "^4.6.1",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "helmet": "^7.0.0",
    "winston": "^3.8.2",
    "morgan": "^1.10.0",
    "axios": "^1.3.5",
    "multer": "^1.4.5-lts.1",
    "joi": "^17.9.1",
    "http-status-codes": "^2.2.0",
    "cron": "^2.3.0",
    "openai": "^4.12.4",
    "marked": "^5.0.0",
    "validator": "^13.9.0"
  }
}
